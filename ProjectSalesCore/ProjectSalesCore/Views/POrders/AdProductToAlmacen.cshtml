@model ProjectSalesCore.ViewModel.PurchaseOrder.AddProcuctsToAlmacenViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("AddProductToAlmacen", "POrders", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-horizontal">
        <h4>POrder</h4>
        <div>
            <table>
                @foreach (var item in Model.OrderDetail_IdAlmacenViewModel)
                {
                    <tr>
                        <td>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.DropDownList("IdStorage", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => item.IdStorage, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td>Product:</td>
                        <td>@item.OrderDetailsComprasViewModel.Product</td>
                        <td>Quantity:</td>
                        <td>@item.OrderDetailsComprasViewModel.Quantity</td>
                    </tr>
                }
            </table>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" onclick="location.href='@Url.Action("AdProductToAlmacen", "POrders")'" />
        </div>
    </div>
}


